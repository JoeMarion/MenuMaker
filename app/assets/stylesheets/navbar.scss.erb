@import "normalize-rails";
@import "compass";
@import "susy";

/* Susy global settings */

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

// -----------------------------------------------

.navbar-container {
  @include container;
  background-color: #0D82DF;
  border-bottom: 2px solid #3753DC;
  .open-menu {
    @include span(1);
    padding: 1em;
    img {
      height: 2em;
    }
  }
  .menu-maker {
    @include span(3 last);
    color: white;
    a {
      color: inherit;
      text-decoration: none;
      font-size: 2rem;
    }
  }
}
