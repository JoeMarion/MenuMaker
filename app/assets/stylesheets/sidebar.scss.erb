@import "normalize-rails";
@import "compass";
@import "susy";

/* Susy global settings */

$susy: (
  columns: 12,
  gutters: 1/4,
  global-box-sizing: border-box
);

@include border-box-sizing;

// -----------------------------------------------


.sidebar-container {
  @include span(2.5);
  display: none;
  position: absolute;
  left: 0;
  height: 100%;
  background-color: red;
  .close-sidebar {
    @include span(2.5 last);
  }
}
